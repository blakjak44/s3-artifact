{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./"
  },
  "paths": {
    "s3-artifact": "src"
  },
  "lib": [
    "esnext",
    "dom",
    "dom.iterable"
  ],
  "exclude": [
    "node_modules",
    "**/test/**",
    "**/dist/**",
    "**/scripts/**",
    "rollup.config.ts"
  ]
}